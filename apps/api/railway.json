{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "nixpacks.toml",
    "watchPatterns": [
      "/apps/api/**",
      "/packages/**",
      "/package.json",
      "/package-lock.json",
      "/turbo.json"
    ]
  },
  "deploy": {
    "startCommand": "npm run start:prod --workspace=@website-scraper/api",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
